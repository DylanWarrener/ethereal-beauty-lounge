{
  "compilerOptions": {
    "typeRoots": [
      "./abstractions/types",
      "./node_modules/@types",
      "./.nuxt/types"
    ], // Include abstractions/types for global types
    "baseUrl": ".",
    "strict": true
  },
  "include": [
    "./abstractions/**/*.{ts,d.ts}",
    "./components/**/*.{vue,ts}",
    "./layouts/**/*.{vue,ts}",
    "./pages/**/*.{vue,ts}",
    "./plugins/**/*.{ts,d.ts}",
    "./server/**/*",
    "src/stores/**/*.{ts,d.ts}",
    "./utils/**/*.{ts,d.ts}",
    ".nuxt/**/*" // Include Nuxt-generated files
  ],
  "exclude": ["node_modules"],
  "extends": "./.nuxt/tsconfig.json"
}
