{
  "compilerOptions": {
    "typeRoots": [
      "./abstractions/types",
      "./node_modules/@types",
      "./.nuxt/types"
    ],
    "baseUrl": ".",
    "strict": true
  },
  "include": [
    "nuxt.config.ts",
    "app.config.ts",
    "eslint.config.js",
    "./abstractions/**/*.{ts,d.ts}",
    "./components/**/*.{vue,ts}",
    "./layouts/**/*.{vue,ts}",
    "./pages/**/*.{vue,ts}",
    "./plugins/**/*.{ts,d.ts}",
    "./server/**/*",
    "src/stores/**/*.{ts,d.ts}",
    "./utils/**/*.{ts,d.ts}",
    ".nuxt/**/*"
  ],
  "exclude": ["node_modules"],
  "extends": "./.nuxt/tsconfig.json"
}
