{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/abstractions/*": ["abstractions/*"],
      "@/assets/*": ["assets/*"],
      "@/components/*": ["components/*"],
      "@/stores/*": ["stores/*"],
      "@/utils/*": ["utils/*"],
      "@/plugins/*": ["plugins/*"]
    },
    "types": ["@nuxt/types", "@types/node", "@vue/runtime-dom", "vue/macros"],
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "./abstractions/types", // Directory for type declarations
    "emitDeclarationOnly": true, // Generate only declaration files
    "noEmit": false // Ensure files are emitted (overrides the extended config)
  },
  "include": [".nuxt/**/*", "**/*.ts", "**/*.d.ts", "**/*.vue", "**/*.d.vue"],
  "exclude": ["node_modules"],
  "extends": "./.nuxt/tsconfig.json"
}
