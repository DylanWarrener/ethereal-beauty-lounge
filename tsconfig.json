{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/abstractions/*": ["abstractions/*"],
      "@/assets/*": ["assets/*"],
      "@/components/*": ["components/*"],
      "@/stores/*": ["stores/*"],
      "@/utils/*": ["utils/*"],
      "@/plugins/*": ["plugins/*"]
    },
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "./abstractions/types",
    "emitDeclarationOnly": true,
    "noEmit": false
  },
  "include": [
    "nuxt.config.ts",
    "app.config.ts",
    "eslint.config.js",
    "./abstractions/**/*.{ts,d.ts}",
    "./components/**/*.{vue,ts}",
    "./layouts/**/*.{vue,ts}",
    "./pages/**/*.{vue,ts}",
    "./plugins/**/*.{ts,d.ts}",
    "./server/**/*",
    "./stores/**/*.{ts,d.ts}",
    "./utils/**/*.{ts,d.ts}",
    ".nuxt/**/*" // Include Nuxt-generated files
  ],
  "exclude": ["node_modules"],
  "extends": "./.nuxt/tsconfig.json"
}
